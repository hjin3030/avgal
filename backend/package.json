{
  "name": "avgal-backend",
  "version": "1.0.0",
  "description": "Backend del sistema AVGAL con Express y TypeScript",
  "main": "dist/index.js",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon --legacy-watch --ext ts --exec \"npx ts-node ./src/index.ts\"",
    "start": "node dist/index.js",
    "build": "tsc --project tsconfig.json",
    "clean": "rmdir /s /q dist 2>nul | mkdir dist"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.4",
    "@types/sequelize": "^4.28.20",
    "@types/validator": "^13.15.3",
    "nodemon": "^3.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
